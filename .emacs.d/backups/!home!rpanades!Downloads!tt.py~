"""
   Programme Le jeu du devin
"""

import random

n = random.randint(0, 100)

while True:
    var = input("Entrez un nombre ")

    # ligne modifie
    try:
        var = int(var)
    except ValueError:
        print("le nombre n'est pas un entier!")
        #  break

    if var < n:
        appreciation = "trop bas"
        print(var, appreciation)
    else:
        appreciation = "trop haut"
        print(var, appreciation)
    if var == n:
        appreciation = "bravo !"
        print(var, appreciation)
        break
